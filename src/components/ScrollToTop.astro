<button id="scroll-to-top" class="scroll-to-top" aria-label="Volver arriba">
  <div class="code-container">
    <span class="code-line">function</span>
    <span class="code-line">scrollTop() {</span>
    <span class="code-line">  window.scroll({</span>
    <span class="code-line">    top: 0,</span>
    <span class="code-line">    behavior:</span>
    <span class="code-line">    'smooth'</span>
    <span class="code-line">  })</span>
    <span class="code-line">}</span>
  </div>
  <div class="arrow-up">
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <polyline points="18 15 12 9 6 15"></polyline>
    </svg>
  </div>
</button>

<script>
  // Mostrar/ocultar el botón según el scroll
  const scrollToTopButton = document.getElementById('scroll-to-top');

  window.addEventListener('scroll', () => {
    if (window.scrollY > 300) {
      scrollToTopButton?.classList.add('visible');
    } else {
      scrollToTopButton?.classList.remove('visible');
    }
  });

  // Funcionalidad de scroll al hacer clic
  scrollToTopButton?.addEventListener('click', () => {
    window.scrollTo({
      top: 0,
      behavior: 'smooth'
    });

    // Activar animación de código
    const codeLines = document.querySelectorAll('.code-line');
    codeLines.forEach((line, index) => {
      setTimeout(() => {
        line.classList.add('active');
        setTimeout(() => {
          line.classList.remove('active');
        }, 500);
      }, index * 100);
    });
  });
</script>

<style>
  .scroll-to-top {
    position: fixed;
    bottom: 30px;
    left: 30px;
    width: 50px;
    height: 50px;
    background-color: var(--primary-color);
    color: white;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    display: flex;
    justify-content: center;
    align-items: center;
    opacity: 0;
    transform: translateY(20px);
    transition: all 0.3s ease;
    z-index: 997;
    overflow: hidden;
    box-shadow: 0 4px 10px var(--shadow-color);
    animation: pulse-scroll 2s infinite;
  }

  @keyframes pulse-scroll {
    0% {
      box-shadow: 0 0 0 0 rgba(59, 130, 246, 0.7);
    }
    70% {
      box-shadow: 0 0 0 10px rgba(59, 130, 246, 0);
    }
    100% {
      box-shadow: 0 0 0 0 rgba(59, 130, 246, 0);
    }
  }

  html.dark .scroll-to-top {
    animation: pulse-scroll-dark 2s infinite;
  }

  @keyframes pulse-scroll-dark {
    0% {
      box-shadow: 0 0 0 0 rgba(96, 165, 250, 0.7);
    }
    70% {
      box-shadow: 0 0 0 10px rgba(96, 165, 250, 0);
    }
    100% {
      box-shadow: 0 0 0 0 rgba(96, 165, 250, 0);
    }
  }

  .scroll-to-top.visible {
    opacity: 1;
    transform: translateY(0);
    animation: bounce-in 0.5s ease-out;
  }

  @keyframes bounce-in {
    0% {
      opacity: 0;
      transform: translateY(20px);
    }
    50% {
      transform: translateY(-5px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .scroll-to-top:hover {
    background-color: var(--secondary-color);
    transform: translateY(-5px);
    box-shadow: 0 6px 15px var(--shadow-color);
  }

  .scroll-to-top:active {
    transform: translateY(-2px);
    box-shadow: 0 3px 10px var(--shadow-color);
  }

  html.dark .scroll-to-top {
    background-color: var(--primary-color);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
  }

  html.dark .scroll-to-top:hover {
    background-color: var(--secondary-color);
  }

  .arrow-up {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    transition: all 0.3s ease;
  }

  .scroll-to-top:hover .arrow-up {
    opacity: 0;
    transform: translateY(-20px);
  }

  .code-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    opacity: 0;
    transform: translateY(20px);
    transition: all 0.3s ease;
    font-family: 'Consolas', 'Monaco', monospace;
    font-size: 0.6rem;
    line-height: 1;
    text-align: left;
    padding: 5px;
    overflow: hidden;
  }

  .scroll-to-top:hover .code-container {
    opacity: 1;
    transform: translateY(0);
  }

  .code-line {
    width: 100%;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    transition: all 0.3s ease;
    opacity: 0.7;
  }

  .code-line.active {
    color: #ffcc00;
    opacity: 1;
    transform: scale(1.1);
  }

  /* Indentación del código */
  .code-line:nth-child(3),
  .code-line:nth-child(4),
  .code-line:nth-child(5),
  .code-line:nth-child(6) {
    padding-left: 10px;
  }

  /* Colores de sintaxis */
  .code-line:nth-child(1) {
    color: #ff79c6;
  }

  .code-line:nth-child(2),
  .code-line:nth-child(7),
  .code-line:nth-child(8) {
    color: #f8f8f2;
  }

  .code-line:nth-child(3),
  .code-line:nth-child(4) {
    color: #8be9fd;
  }

  .code-line:nth-child(5),
  .code-line:nth-child(6) {
    color: #f1fa8c;
  }

  @media (max-width: 768px) {
    .scroll-to-top {
      bottom: 20px;
      left: 20px;
      width: 45px;
      height: 45px;
    }
  }
</style>
